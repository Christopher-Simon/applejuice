<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Applejuice</h5>

  <% if account_signed_in? %>
  <nav class="my-2 my-md-0 mr-md-3">
	  <%= link_to "Browse", browse_path, class: "text-dark mr-2"%>
	  <%= link_to "My matches", matches_path, class: "text-dark mr-2"%>
	  <%= link_to "Settings", edit_account_registration_path, class: "btn btn-outline-primary"%>
	</nav>
  <%= link_to "Sign out", destroy_account_session_path, method: :delete, class: "btn btn-secondary mr-2" %>
  <% else %>
  <%= link_to "Sign in", new_account_session_path, class: "btn btn-outline-secondary mr-2" %>
  <%= link_to "Sign up", new_account_registration_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>
