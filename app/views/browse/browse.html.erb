<div class="row">
  <div class="col-3 col-md-4 bg-white">
    <%= render "layouts/profile_bar" %>
    <ul class="nav nav-pills ml-4 mt-2 mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Match</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-profile" aria-selected="false">Messages</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane ml-2 fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "browse/matches" %>
      </div>
      <div class="tab-pane ml-2 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <p>No messages to display.</p>
        </div>
      </div>
    </div>

  </div>
  <div class="col-9 col-md-8">

    <ul id="slides">
      <% @users.each_with_index do |user, i| %>
      <div class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
        <p><%= user.first_name %></p>
      </div>
      <% end %>
    </ul>

    <div id="slide-controls">
      <button id="decline">no</button>
      <button id="approve">yes</button>
    </div>

  </div>
</div>
